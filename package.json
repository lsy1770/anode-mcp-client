{
  "name": "@anode/mcp-client",
  "version": "1.0.0",
  "description": "MCP client for connecting to Anode Android MCP Server. Enables AI assistants like Claude to control Android devices.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "anode-mcp": "./bin/acs-mcp.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest",
    "lint": "eslint src/",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "android",
    "automation",
    "anode",
    "claude",
    "ai",
    "accessibility"
  ],
  "author": "Anode Team <support@anode.app>",
  "license": "MIT",
  "homepage": "https://github.com/lsy1770/anode-mcp-client#readme",
  "bugs": {
    "url": "https://github.com/lsy1770/anode-mcp-client/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lsy1770/anode-mcp-client.git"
  },
  "dependencies": {
    "ws": "^8.16.0",
    "eventsource": "^2.0.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "@types/eventsource": "^1.1.15",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "vitest": "^1.1.0",
    "eslint": "^8.56.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
